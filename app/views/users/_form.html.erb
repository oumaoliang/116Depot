<script type="text/javascript" src="/javascripts/check.js"></script>
<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<div class = "depot_form">
  
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
  	<legend>Enter User Details</legend>
  	
  	<div id="ajaxdiv">
    	<%= f.label :name %><br />
	    <%= f.text_field :name, :size => 40, :id => "fname", :onchange => "showHint(this.value)",
	     :onkeyup => "showHint(this.value)"%>
	    <span id="txtHint" ></span>
	</div>
	<div>
	    <%= f.label :password, 'Password' %><br />
	    <%= f.password_field :password, :id => "pwd", :size => 40, :onkeyup => "checkPWD(this.value)" %>
	    <span id="PWDHint" ></span>
	</div>
	<div>
	    <%= f.label :password_confirmation, 'Confirm' %><br />
	    <%= f.password_field :password_confirmation, :id => "pwd_confirm", :size => 40, :onkeyup => "pwdConfirm(this.value)" %>
	    <span id="confirmHint" ></span>
	</div>
	<div>
	    <%= f.submit :id => "btnOK" %>
	</div>
  </fieldset>
<% end %>

</div>
