<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= t('.title_html') %></h1>

<% @products.each do |product| %>
	<div class="entry">
		<%= image_tag(product.image_url) %>
		<h3><%= link_to(product.title, product_path(:id => product.id), :method => :get )%></h3>
		<%= truncate(strip_tags(product.description),:length => 120) %>
		<div class="price_line">
			<span class="price"><%= number_to_currency(product.price) %></span>
			<%= button_to t('.add_html'), line_items_path(:product_id => product),
				:remote => true %>
<!-- 			<%= link_to 'comments', comment_line_items_path(:product_id => product),
				:method => :get %> -->
		</div>
	</div>
<% end %>
<div id="paging">
<p> <%= will_paginate @products %></p>
</div>