<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START_HIGHLIGHT -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
<!-- END_HIGHLIGHT -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<!-- END:head -->
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png") %>
		<%= @page_title || t('.title') %>
		<%= form_tag store_path, :class => 'locale' do %>
		<%= select_tag 'set_locale',
			options_for_select(LANGUAGES, I18n.locale.to_s),
				:onchange => 'this.form.submit()' %>
		<%= submit_tag 'submit' %>
		<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
		<% end %>
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id=>"cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>

			<%=link_to'home',store_path%><br />	
			<a href="http://www..../faq"><%= t('.questions') %></a><br />
			<a href="news_store/index"><%= t('.news') %></a><br />
			<div id="service">
				<a target="_blank" href="tencent://message/?uin=806794204&Site=www.xnzjpc.com.cn&Menu=yes"
			 		title="锟斤拷锟斤拷曳锟斤拷锟斤拷锟较�><img src="http://wpa.qq.com/pa?p=1:806794204:4"></a> 
			 		<a href="tencent://message/?uin=806794204&Site=www.xnzjpc.com.cn&Menu=yes">Contact</a>
			</div>

			
			
			<%if session[:user_id]%>
				<br />
				<%= link_to'Orders', orders_path %><br/>
				<%= link_to'Products',products_path %><br/>
				<%= link_to'Users', users_path %><br/>
				<a href="/news"><%= t('.Operate News') %></a><br />
				
				<br />
				<%= button_to'Logout',logout_path, :method=>:delete %>
			<%end%>

		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
