<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag '/images/web_logo.ico'%>
  <title>Pragprog Books Online Store</title>
<!-- START_HIGHLIGHT -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
<!-- END_HIGHLIGHT -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<!-- END:head -->
<body id="store">
	<div id="banner">
		<div id="logo_pic">
			<%= image_tag("logo.png") %>
			<%= @page_title || t('.title') %>
		</div>
		<div id="banner_right_side">
		    <%= form_tag searches_path, :class=>'search', :method=>'get' do %>
			<%= text_field_tag "q", params[:q], :class => "search_input" %>
			<%= submit_tag "Search" %>
			<% end %>
			
			<!--
			<%= submit_tag 'submit' %>
			-->
			<%= javascript_tag "$$('.locale input').each(Element.hide)" %>
			<%= form_tag store_path, :class => 'locale' do %>			
			<% end %>
		</div>
		<div id="languge_select">
			<%= select_tag 'set_locale',
			options_for_select(LANGUAGES, I18n.locale.to_s),
			:onchange => 'this.form.submit()'%>
		</div>
		
	</div>
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id=>"cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>

			<a href="/"><%= t('.home') %></a><br />
			<a href=<%= questions_path %>><%= t('.questions') %></a><br />
			<a href="news_store/index"><%= t('.news') %></a><br />

			
			<%if session[:user_id]%>
				<br />
				<%= link_to'Orders', orders_path %><br/>
				<%= link_to'Products',products_path %><br/>
				<%= link_to'Users', users_path %><br/>
				<a href="/news"><%= t('.Operate News') %></a><br />

				<br />
				<%= button_to'Logout',logout_path, :method=>:delete ,:id => "btn_logout"%>
			<%end%>
			<div id="service">
				<a target="_blank" href="tencent://message/?uin=806794204&Site=www.xnzjpc.com.cn&Menu=yes"
			 		title="鑵捐QQ"><img src="http://wpa.qq.com/pa?p=1:806794204:4"></a> 
			 		<a href="tencent://message/?uin=806794204&Site=www.xnzjpc.com.cn&Menu=yes">Online service</a>
			</div>
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
