<!-- START:head -->
<!DOCTYPE html>
<html>
<head>
  <title>Pragprog Books Online Store</title>
<!-- START: stylesheet -->
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "depot", :media => "all" %>
<!-- END_stylesheet -->
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<!-- END:head -->
<body id="store">
	<div id="banner">
		<%= image_tag("logo.png")%>
		<%= @page_title || "pragamatic Bookshelf" %>
	</div>
	
	<div id="columns">
		<div id="side">
			<% if @cart %>
				<%= hidden_div_if(@cart.line_items.empty?, :id => "cart") do %>
					<%= render @cart %>
				<% end %>
			<% end %>
			
			<a href="http://localhost:3000">Home</a><br />
			<a href="http://www....">Questions</a><br />
			<a href="http://www....">News</a><br />
			<a href="http://www....">Contact</a><br />
		</div>
		<div id="main">
			<%= yield %>
		</div>
	</div>
</body>
</html>
