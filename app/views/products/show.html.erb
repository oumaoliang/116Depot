<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<style type="text/css">
	#product_detail img {
		float: left; padding-right:20px; width: 120px; height:auto;
	}
	#each_comment {
		border-style:solid; border-width:1px; border-color:#E5E5E5; height: 150px; margin-top:5px;
	}
	#each_comment_content img {
		float: left; padding-right: 12px;
	}
	#each_comment_tile {
		margin-top: 110px; margin-left: 132px;
	}
	#delete_comment {
		float: right;
	}
	#page_link {
		margin-left: 30%;
	}
</style>
<div id="product_detail">
	<img src="<%= @product.image_url %>" />
	<p>
	<b>Title:</b>
	  <%= @product.title %>
	</p>
	<p>
  	<b>Price:</b>
  	  <%= number_to_currency(@product.price) %>
	</p>
	<p>
  	<b>Score:</b>
  	  <%= @product.score %>
	</p>
	<b>Description:</b>
	  <%= sanitize @product.description %>
	</p>
	<p>
</div>
<div style="border-top:1px dashed #cccccc;height: 1px;overflow:hidden"></div>

<div id="comment_list_detail">
	<h3>Customer Reviews</h3>
	<% @comments.each do |comment|%>
		<div id="each_comment">
			<div id="each_comment_content">
				<img src="/images/15.jpg" />
				<%= comment.cmContent%>
				<%if session[:user_id]%>
					<div id="delete_comment">
						<%= link_to 'Destroy', comment, :confirm => "Are you sure?", :method => :delete, :style => "color:red" %>
					</div>
				<% end %>
			</div>
			<div id="each_comment_tile">
				posted at: <%= comment.created_at%>
			</div>
		</div>
	<% end %>
</div>
<div id="page_link"> <%= will_paginate @comments %> </div>
<%= render 'commentform' %>

<%if session[:user_id]%>
	<%= link_to 'Edit', edit_product_path(@product) %> |

	<%= link_to 'Back', products_path()%>
<% end %>
